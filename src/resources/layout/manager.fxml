                        <Button mnemonicParsing="false" onMouseClicked="#onDownClicked" text="v" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onMouseClicked="#onSavedListClicked" text="Save Move" />
               </children>
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
